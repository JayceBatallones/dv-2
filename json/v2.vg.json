{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 250,
    "height": 300,
    "config": {
        "background": "#e0fbfc"
    },
    "title": "Electric Vehicle Manufacturers",
    "data": {
      "url": "https://raw.githubusercontent.com/JayceBatallones/dv-2/main/data/EV_Company_Manufactured.csv"
    },

    "params": [
        {
            "name":"vehiclesproduced",
            "value": 100,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 52000,
                "step": 1000,
                "name": "Vehicles Produced"
            }
        }
    ],
    "layer": [{
        "mark": "bar",
        "encoding": {
            "x": {
                "field": "Manufactured",
                "type": "quantitative",
                "title": "Vehicles Produced"
            },
            "y": {
                "field": "Manufacturer",
                "title": "Manufacturers",
                "type": "ordinal",
                "sort": "-x"
            },
            "tooltip": [
                {"field": "Manufacturer", "type":"nominal"},
                {"field": "Manufactured", "type":"ordinal", "title": "Vehicles Manufactured"}
            ]
        }
     
    }
]
            
            
    
  }
  